<%# content_for(:head) do %>
<!--  <title>Create Application</title>-->
<%#= stylesheet_pack_tag 'CreateApplicationPack', media: nil %>
<%# end %>

<%# content_for(:tail) do %>
<%#= javascript_pack_tag 'CreateApplicationPack', nonce: true %>
<%# end %>

<!--<div id="react-root"></div>-->


<div class="container mx-auto px-3 max-w-5xl py-8">
  <div
    class="border border-gray-100 rounded-lg shadow-lg bg-white p-3 md:p-6 ">
    <div class="max-w-xl mx-auto">
      <div class="text-3xl font-semibold text-center border-b-4 border-gray-700 ">
        Create Application
      </div>
      <%= simple_form_for Application.new, defaults: { input_html: { class: 'form-input input-text mt-1 font-sans' }, wrapper_html: { class: 'flex flex-col my-4 max-w-xl mx-auto' }, label_html: { class: 'label' } } do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <%= f.input :flight_number %>
        <%= f.input :port_of_departure %>
        <%= f.association :port, collection: Port.all(), input_html: { class: 'form-select', id: 'dropdown-choice-select' } %>

        <span class="inline-flex rounded-md shadow-sm">
        <%= f.button :submit, 'Create Application', 'data-turbolinks-scroll': false, class: 'mt-4 inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-gray-900 hover:bg-gray-800 focus:outline-none focus:border-gray-700 focus:shadow-outline-indigo active:bg-gray-700 transition ease-in-out duration-150' %>
    </span>
      <% end %>
    </div>
  </div>
</div>;
