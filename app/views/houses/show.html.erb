<div class="bg-white shadow overflow-hidden  sm:rounded-lg">
  <div class="px-4 py-5 border-b border-gray-200 flex flex-col items-between justify-center  lg:flex-row lg:items-center lg:justify-between sm:px-6">
    <div>
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        House details
      </h3>
    </div>
    <% if not current_user.panchayat_admin? %>
      <div class="mt-3 lg:mt-0">
        <%= link_to 'Edit House Details', edit_application_house_path(@application, @house), class: 'inline-flex items-center px-3 py-2 rounded-md text-sm font-medium leading-5 bg-gray-100 text-gray-800' %>
      </div>
    <% end %>
  </div>
  <div class="px-4 py-5 sm:p-0">
    <dl>
      <div class="mt-8 sm:mt-0 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-t sm:border-gray-200 sm:px-6 sm:py-5">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Local Contact
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
          <%= @house.contact_person %>, <%= @house.contact_number %>
        </dd>
      </div>
      <div class="mt-8 sm:mt-0 sm:grid sm:grid-cols-3 sm:gap-4 sm:border-t sm:border-gray-200 sm:px-6 sm:py-5">
        <dt class="text-sm leading-5 font-medium text-gray-500">
          Address
        </dt>
        <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
          <ul>
            <li class="my-2"><span class="font-bold">House:</span> <span><%= @house.name %></span></li>
            <li class="my-2"><span class="font-bold">Ward: </span><%= @house.ward %></span></li>
            <li class="my-2"><span class="font-bold">Panchayat: </span><%= @house.panchayat.name %></span></li>
          </ul>
        </dd>
